<Window x:Class="IAB251_WPF_ASS2.CustomerOrEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IAB251_WPF_ASS2"
        mc:Ignorable="d"
        Title="CustomerOrEmployee" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Welcome to InterPort Cargo!"
                   TextAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="Black"
                    Margin="216,24,216,348"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Customer or Employee?"
                       TextAlignment="Center"
           FontSize="24"
           FontWeight="Bold"
           Foreground="Black"
           Margin="10"/>
            <Button Content="Customer" Width="300" Height="40" Margin="0,10,0,0" Click="Customer_Click"/>
            <Button Content="Employee" Width="300" Height="40" Margin="0,10,0,0" Click="Employee_Click"/>
        </StackPanel>
    </Grid>
</Window>
