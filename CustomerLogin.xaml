<Page x:Class="IAB251_WPF_ASS2.CustomerLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Login" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Email Address:" />
            <TextBox x:Name="EmailAddresstxt" />

            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="Passwordtxt" />

            <Button Content="Login" Click="LoginButtonClick" Margin="0,20,0,0"/>
            <TextBlock x:Name="Messagetxt" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>

