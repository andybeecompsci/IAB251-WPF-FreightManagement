<Page x:Class="IAB251_WPF_ASS2.CustomerRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Registration" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="First Name:" />
            <TextBox x:Name="FirstNametxt" />

            <TextBlock Text="Last Name:" Margin="0,10,0,0" />
            <TextBox x:Name="LastNametxt" />

            <TextBlock Text="Email Address:" Margin="0,10,0,0" />
            <TextBox x:Name="EmailAddresstxt" />

            <TextBlock Text="Phone Number:" Margin="0,10,0,0" />
            <TextBox x:Name="PhoneNumbertxt" />

            <TextBlock Text="Address:" Margin="0,10,0,0" />
            <TextBox x:Name="Addresstxt" />

            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="Passwordtxt" />

            <Button Content="Register" Click="RegisterButtonClick" Margin="0,20,0,0"/>
            <TextBlock x:Name="Messagetxt" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
