<Page x:Class="IAB251_WPF_ASS2.RateSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IAB251_WPF_ASS2"
        mc:Ignorable="d"
        Title="RateSchedule" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Back" Width="71" Click="BackButton_Click" HorizontalAlignment="Left" Margin="10,417,0,10"/>

        <Grid Grid.Column="1" Margin="10">
            <TextBlock Text="Rate Schedule" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="106,10,0,0"/>
            <DataGrid x:Name="RateScheduleExtractData" AutoGenerateColumns="False" HeadersVisibility="Column" Margin="-198,50,10,40">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
                    <DataGridTextColumn Header="20 Feet Container" Binding="{Binding TwentyFtFee}" Width="*" />
                    <DataGridTextColumn Header="40 Feet Container" Binding="{Binding FortyFtFee}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

    </Grid>

</Page>
